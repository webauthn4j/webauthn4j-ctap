<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.unifidokey.app.handheld.presentation.RelyingPartyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.unifidokey.app.handheld.presentation.RelyingPartyView
            android:id="@+id/relying_party_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            rpId="@{viewModel.rpId}"
            rpName="@{viewModel.rpName}"
            biometricAuthenticationEnabled="@{viewModel.biometricAuthenticationGlobalState}"
            biometricAuthentication="@{viewModel.biometricAuthentication}"
            onBiometricAuthenticationCheckBoxCheckedChangeListener="@{viewModel::biometricAuthenticationCheckBoxCheckedChange}"
            android:onLongClick="@{viewModel::onLongClick}"
            onDeleteButtonClickListener="@{viewModel::onDeleteButtonClick}"
            >
        </com.unifidokey.app.handheld.presentation.RelyingPartyView>
    </LinearLayout>

</layout>

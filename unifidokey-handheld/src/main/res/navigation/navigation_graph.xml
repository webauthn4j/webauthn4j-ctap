<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.unifidokey.app.handheld.presentation.HomeFragment"
        android:label="UnifidoKey">
        <action
            android:id="@+id/action_homeFragment_to_credentialListFragment"
            app:destination="@id/credentialListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/credentialListFragment"
        android:name="com.unifidokey.app.handheld.presentation.CredentialsFragment"
        android:label="Credentials">
        <action
            android:id="@+id/action_credentialListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_credentialListFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_credentialListFragment_to_credentialDetailsFragment"
            app:destination="@id/credentialDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.unifidokey.app.handheld.presentation.HistoryFragment"
        android:label="History">
        <action
            android:id="@+id/action_historyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_historyFragment_to_credentialListFragment"
            app:destination="@id/credentialListFragment" />
    </fragment>
    <fragment
        android:id="@+id/credentialDetailsFragment"
        android:name="com.unifidokey.app.handheld.presentation.CredentialDetailsFragment"
        android:label="Credential">
        <argument
            android:name="userCredential"
            app:argType="com.unifidokey.driver.persistence.entity.UserCredentialEntity" />
    </fragment>
</navigation>